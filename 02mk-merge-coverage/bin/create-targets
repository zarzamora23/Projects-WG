#!/bin/bash
##
## DESCRIPTION:
##      
##	Script to get a list of Depth of Coverage files to merge and to print required mk targets to STDOUT.
## USAGE:
##      bin/create-targets

## Obtain list of sample interval summary files for a group of samples

#
ls data/*.dcov.sample_interval_summary > data/group1.sample_interval_summary.list

find -L data/ \
        -name '*.sample_interval_summary.list' \
| sed -r \
        -e 's#^data/#results/#' \
        -e 's#.sample_interval_summary.list$#.RD.txt#g'

